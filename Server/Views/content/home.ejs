<div class = "container">
    <h1>Add Schedule</h1>
   
    <!-- Message Area -->
        <% if(messages.length > 0) { %>
            <div id="messageArea" class="alert alert-dark">
                <%= messages %>
                
            </div>
            <% } %>
    <form method = "POST">       
          <div class="form-group col-md-1">
            <label for="Name">Name</label>
            <select name ="Name" id="Name" class="form-control" required>
              <option></option>
              <option>Ethan</option>
              <option>Seth</option>
              <option>Jasmin</option>
              <option>Elizabeth</option>
            </select>
          </div>

          <div class="form-group col-md-4 mt-4">
            <p>Date</p>
            <input type="date" id="Date" name="Date" required>
          </div>


          <div class="form-group col-md-1  mt-4 mb-4">
            <label for="ScheduleType">Schedule Type</label>
            <select id="ScheduleType" name="ScheduleType" class="form-control" required>
                <option></option>
                <option>C</option>
                <option>B</option>
                <option>G</option>
                <option>D</option>
                <option>E</option>
                <option>L</option>
            </select>
          </div>

        <button id="AddSchedule" name="AddSchedule" type="submit" class="btn btn-dark">Add to Schedule</button>
      </form>
</div>